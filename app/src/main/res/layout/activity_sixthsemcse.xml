<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sixthsemcse"
    android:background="@color/black">





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        android:id="@+id/c1">

        <TextView

            android:id="@+id/pdf_name"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="retrievePDF"
            android:text="System software and compiler design"
            android:textColor="@color/black" />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/c2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        android:layout_below="@+id/c1">

        <TextView
            android:id="@+id/name"
            android:layout_width="350dp"
            android:layout_height="48dp"

            android:textSize="20sp"
            android:gravity="center"
            android:onClick="retrievePDF"
            android:text="Computer graphics and visualization"
            android:textColor="@color/black" />



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        android:id="@+id/c3"
        android:layout_below="@+id/c2">

        <TextView
            android:id="@+id/name1"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="retrievePDF"
            android:text="Web Technology and application"
            android:textColor="@color/black" />


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        android:id="@+id/c6"
        android:layout_below="@+id/c3">

        <TextView
            android:id="@+id/name4"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="retrievePDF"
            android:text="Cloud Computing"
            android:textColor="@color/black" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        android:id="@+id/c7"
        android:layout_below="@+id/c6">

        <TextView
            android:id="@+id/name5"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="retrievePDF"
            android:text="Advanced Java"
            android:textColor="@color/black" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        android:id="@+id/c8"
        android:layout_below="@+id/c6">

        <TextView
            android:id="@+id/name6"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="retrievePDF"
            android:text="OSHA"
            android:textColor="@color/black" />


    </androidx.cardview.widget.CardView>




</RelativeLayout>